# Backend Environment Variables
# MongoDB Connection (Use Mongo Atlas for production)
MONGO_URL=mongodb+srv://username:password@cluster.mongodb.net/cognivoice

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production

# API Configuration
API_HOST=0.0.0.0
# PORT is set automatically by Cloud Run (default 8080)
PORT=8080
API_ENV=production

# Frontend URL (for CORS) - Update after deploying to Vercel
FRONTEND_URL=https://your-app.vercel.app

# Optional: Max upload size in MB
MAX_UPLOAD_SIZE=50
